@page "/SeePost/{id:int}"
@using Domain.Models
@using HttpClients
@using Domain.DTOs
@inject IPostService postService;
@inject NavigationManager navMgr


<h3>See Post</h3>
 
@if (post == null)
{
    <p> No post to display </p>
}

else
{
    <div class="card">
    <div class="form-group field">
        <label>By:</label>
            <input type="text" @bind="post.OwnerName"/>
    </div>
    <div class="form-group field">
        <label>Title:</label>
            <input type="text" @bind="post.Title"/>
    </div>
    <div class="text-body">
        <label>Body: </label>
            <input type="text" @bind="post.Body"/>
    </div>
    <div class="button-row">
        <button class="backBtn" @onclick="@(()=>navMgr.NavigateTo($"/ViewPosts"))"> Back </button>
    </div>
    </div>
}
@if (!string.IsNullOrEmpty(msg))
{
    <label style="color: red">@msg</label>
}


@code {

    [Parameter]
    public int Id { get; set; }

    private string msg = "";
    private PostBasicDto post=null!;
    
    
    protected override async Task OnInitializedAsync()
    {
        try
        {
          post = await postService.GetByIdAsync(Id);
            
            
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            msg = e.Message;
        }
    }
}
